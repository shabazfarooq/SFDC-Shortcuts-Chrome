{
  "name": "SFDC Shortcuts",
  "version": "0.2",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "goToSfdcSetup": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Alt+Shift+I"
      },
      "description": "Loads the Salesforce Setup page"
    },
    "goToSfdcPages": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Loads Salesforce Pages"
    },
    "goToSfdcClasses": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Loads Salesforce Classes"
    },
    "goToSfdcDevConsole": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Alt+Shift+L"
      },
      "description": "Loads the Salesforce Developer Console"
    }
  },
  "permissions": [
    "tabs"
  ]
}
