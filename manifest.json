{
  "name": "SFDC Shortcuts",
  "version": "0.4",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting", "commands"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*", "https://*.force.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "goToSfdcDevConsole": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Loads the Salesforce Developer Console"
    },
    "goToSfdcSetup": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Loads the Salesforce Setup page"
    },
    "goToSfdcObjects": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Loads the Salesforce Objects page"
    },
    "goToThisObject": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Loads the current Salesforce Object page"
    }
  },
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*"
  ]
}