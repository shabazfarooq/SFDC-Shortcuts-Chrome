{
  "name": "SFDC Shortcuts",
  "version": "0.2",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "goToSfdcSetup": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Alt+Shift+I"
      },
      "description": "Loads the Salesforce setup page"
    },
    "goToSfdcPages": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Alt+Shift+L"
      },
      "description": "Loads the Salesforce pages"
    },
    "goToSfdcClasses": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "Alt+Shift+J"
      },
      "description": "Loads the Salesforce classes"
    }
  },
  "permissions": [
    "tabs"
  ]
}