{
  "name": "SFDC Shortcuts",
  "version": "0.3",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*", "https://*.force.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "goToSfdcDevConsole": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Alt+L"
      },
      "description": "Loads the Salesforce Developer Console"
    },
    "goToSfdcSetup": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Alt+I"
      },
      "description": "Loads the Salesforce Setup page"
    },
    "goToSfdcObjects": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Alt+O"
      },
      "description": "Loads the Salesforce Objects page"
    },
    "goToSfdcClasses": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "Alt+J"
      },
      "description": "Loads Salesforce Classes"
    }
  },
  "permissions": [
    "tabs"
  ]
}

